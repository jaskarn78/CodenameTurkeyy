<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/revealFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/border"
            android:gravity="center_vertical">


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/truck_name_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info_outline_white_24dp"
                app:elevation="10dp"
                app:fabSize="normal"
                app:rippleColor="@color/black"
                app:useCompatPadding="true" />

            <TextView
                android:id="@+id/step_one_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/truck_name_fab"
                android:layout_marginBottom="40dp"
                android:layout_toEndOf="@id/truck_name_fab"
                android:text="@string/step_1_truck_name"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/truck_fab_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/truck_name_fab"
                android:src="@drawable/ic_info_outline_white_24dp"
                app:elevation="10dp"
                app:fabSize="normal"
                app:rippleColor="@color/black"
                app:useCompatPadding="true" />

            <TextView
                android:id="@+id/step_two_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/truck_fab_location"
                android:layout_marginBottom="34dp"
                android:layout_toEndOf="@id/truck_fab_location"
                android:text="@string/step_2_set_location"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/truck_fab_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/truck_fab_location"
                android:src="@drawable/ic_info_outline_white_24dp"
                app:elevation="10dp"
                app:fabSize="normal"
                app:rippleColor="@color/black"
                app:useCompatPadding="true" />

            <TextView
                android:id="@+id/step_three_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/truck_fab_type"
                android:layout_marginBottom="35dp"
                android:layout_toEndOf="@id/truck_fab_type"
                android:text="@string/step_3_set_type"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/truck_fab_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/truck_fab_type"
                android:src="@drawable/ic_info_outline_white_24dp"
                app:elevation="10dp"
                app:fabSize="normal"
                app:rippleColor="@color/black"
                app:useCompatPadding="true" />

            <TextView
                android:id="@+id/step_four_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/truck_fab_image"
                android:layout_marginBottom="40dp"
                android:layout_toEndOf="@id/truck_fab_image"
                android:text="@string/step_4_upload_images"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>


        <com.hlab.fabrevealmenu.view.FABRevealMenu
            android:id="@+id/reveal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            app:animateItems="true"
            app:menuBackgroundColor="@android:color/transparent"
            app:menuDirection="down"
            app:menuTitleTextColor="@color/white"
            app:overlayBackground="@android:color/transparent"
            app:showOverlay="true"
            app:showTitle="true" />

        <com.hlab.fabrevealmenu.view.FABRevealMenu
            android:id="@+id/reveal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            app:animateItems="true"
            app:menuBackgroundColor="@android:color/transparent"
            app:menuDirection="down"
            app:menuTitleTextColor="@color/white"
            app:overlayBackground="@android:color/transparent"
            app:showOverlay="true"
            app:showTitle="true" />

        <com.hlab.fabrevealmenu.view.FABRevealMenu
            android:id="@+id/reveal3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:padding="10dp"
            app:animateItems="true"
            app:menuBackgroundColor="@android:color/transparent"
            app:menuDirection="down"
            app:menuTitleTextColor="@color/white"
            app:overlayBackground="@android:color/transparent"
            app:showOverlay="true"
            app:showTitle="true" />

        <com.hlab.fabrevealmenu.view.FABRevealMenu
            android:id="@+id/reveal4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:padding="10dp"
            app:animateItems="true"
            app:menuBackgroundColor="@android:color/transparent"
            app:menuDirection="down"
            app:menuTitleTextColor="@color/white"
            app:overlayBackground="@android:color/transparent"
            app:showOverlay="true"
            app:showTitle="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@color/md_blue_A700"
            android:textColor="@color/white"
            android:visibility="gone"
            android:text="SUBMIT"
            android:layout_marginBottom="20dp"/>

    </FrameLayout>




</LinearLayout>
