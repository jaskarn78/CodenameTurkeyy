<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.hackathon.DriverActivity">

    <EditText
        android:id="@+id/truck_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="Truck Name"/>

    <Spinner
        android:id="@+id/food_spinner"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        />

    <Switch
        android:id="@+id/driver_active_toggle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Set Active"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/upload_menu_button"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:srcCompat="@android:drawable/ic_menu_upload" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_menu"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:textSize="22dp" />
    </LinearLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        />


</LinearLayout>