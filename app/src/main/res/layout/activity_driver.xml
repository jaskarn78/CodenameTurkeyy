<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.example.android.hackathon.DriverActivity">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView2"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        />

    <EditText
        android:id="@+id/truck_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="Truck Name"
        android:textSize="26sp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/mapView2"/>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/food_spinner"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/truck_name"/>


    <Switch
        android:id="@+id/driver_active_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Set Active"
        android:textSize="26sp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/food_spinner"/>

    <LinearLayout
        android:id="@+id/upload_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/driver_active_toggle"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/upload_menu"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="26dp" />

        <ImageButton
            android:id="@+id/camera_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_camera_alt_black_18dp" />

        <ImageButton
            android:id="@+id/upload_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_file_upload_black_18dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/upload_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_menu_layout"/>

</RelativeLayout>
</ScrollView>